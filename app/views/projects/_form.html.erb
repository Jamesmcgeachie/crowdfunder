<%= form_for(@project) do |f| %>
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :funding_goal%><br/>
		<%= f.text_field :funding_goal %>
	</div>
	<div class="field">
		<%= f.label :start_date%><br/>
		<%= f.datetime_local_field(:start_date) %>
	</div>
	<div class="field">
		<%= f.label :end_date%><br/>
		<%= f.datetime_local_field(:end_date) %>
	</div>
	<div class="field">
		<%= f.fields_for :rewards do |r| %>
			<%= r.label :reward_name %>
			<%= r.text_field :reward_name %>
			<%= r.label :description %>
			<%= r.text_area :description %>
			<%= r.label :tier_value %>
			<%= r.number_field :tier_value %>
		<% end %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>